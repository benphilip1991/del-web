{
  "compileOnSave": false,
  "compilerOptions": {
    // "baseUrl": "./",
    "baseUrl": "src",
    // Shorten import paths using path aliases relative to baseUrl
    "paths": {
      "@env/*": ["environments/*"],
      "@app/*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@services/*": ["app/services/*"],
      "@utils/*": ["app/utils/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
